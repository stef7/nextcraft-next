{
  "name": "stefano-perfili",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3500",
    "build": "next build",
    "start": "next start",
    "gen:schema": "npx apollo schema:download generated/graphql-schema.json",
    "gen:types": "npx apollo codegen:generate generated/graphql-types.ts --localSchemaFile=generated/graphql-schema.json --outputFlat --target=typescript --includes=\"pages/**/*.{js,jsx,ts,tsx}\" --tagName=gql",
    "gen:types-watch": "npx apollo codegen:generate generated/graphql-types.ts --localSchemaFile=generated/graphql-schema.json --outputFlat --target=typescript --includes=\"pages/**/*.{js,jsx,ts,tsx}\" --tagName=gql --watch",
    "gen": "yarn gen:schema && yarn gen:types",
    "gen:watch": "yarn gen:schema && yarn gen:types-watch"
  },
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.0",
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/react": "^17.0.9",
    "apollo": "^2.33.4",
    "typescript": "^4.3.2"
  }
}
